<DailyBlock>
    cols: 2
    activities: activities

    Label:
        text: root.range_hour_text
    TextInput:
        id: activities


<DailyManager>
    name: "Daily"
    grid: grid
    separation_options: separation_options

    GridLayout:
        id: grid
        cols:1

        GridLayout:
            cols:3

            Button:
                text: "yesterday"
                on_release: root.change_day(False)
            Label:
                text: root.date_label
            Button:
                text: "tomorrow"
                on_release: root.change_day(True)
                
        GridLayout:
            cols:2            
            BoxLayout:
                id: separation_options
                orientation: 'horizontal'           
            Button:
                text: "Back"
                on_release: root.go_back()
