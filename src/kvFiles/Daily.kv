<DailyBlock>
    cols: 3
    text_input: text_input
    add_button: add_button
    remove_button: remove_button

    Label:
        size_hint_max_x: 200
        text: root.range_hour_text
    TextInput:
        id: text_input
        text: root.activities
    
    GridLayout:
        cols: 2
        size_hint_max_x: 200
        Button:
            id: add_button
            text: "add"
        Button:
            id: remove_button
            text: "minus"



<DailyManager>
    name: "Daily"
    grid: grid
    separation_options: separation_options

    GridLayout:
        id: grid
        cols:1

        GridLayout:
            cols:3

            Button:
                text: "yesterday"
                on_release: root.change_day(False)
            Label:
                text: root.date_label
            Button:
                text: "tomorrow"
                on_release: root.change_day(True)
                
        GridLayout:
            cols:3          
            BoxLayout:
                id: separation_options
                orientation: 'horizontal'
            GridLayout:
                cols:2     
                Button:
                    text: "Back"
                    on_release: root.go_back()
                Button:
                    text: "Clear"
                    on_release: root.clear_blocks()
                Button:
                    text: "Save"
                    on_release: root.save_data()
